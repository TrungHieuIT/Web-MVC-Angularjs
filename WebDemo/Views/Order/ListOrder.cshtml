
@{
    ViewBag.Title = "ListOrder";
    Layout = null;
}

<h2>List Order</h2>
<div ng-controller="ListOrderController as vm">
    <button class="btn btn-success btn-sm"  ng-click="vm.create()">Create Order</button>
    <table ng-table="vm.tableParams" show-filter="true"
           class="table table-responsive table-hover table-bordered">


            <tr ng-repeat="item in $data ">

                <td class="itemTable" title="'Customer Name'" filter="{CustomerName:'text'}" sortable="'CustomerName'">{{item.CustomerName}}</td>
                <td title="'Date Order'">{{item.DateOrder |date: "dd-MM-yyyy"}}</td>
                <td title="'Date Created'">{{item.DateCreated |date: "dd-MM-yyyy"}}</td>
                <td title="'Note'">{{item.Note}}</td>
                <td title="'Total Money'">{{item.TotalMoney | number : 0}} VNĐ</td>
                <td title="'Action'">
                    <button class="btn btn-success btn-sm" ng-click="vm.edit(item)">Edit</button>
                    <button class="btn btn-danger btn-sm" ng-click="vm.deleteOrder(item)">Delete</button>
                </td>
            </tr>
 
    </table>

   

</div>

