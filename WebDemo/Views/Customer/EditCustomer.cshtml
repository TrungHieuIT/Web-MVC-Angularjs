
@{
    
    Layout = null;
}

<h2>EditCustomer</h2>

<div ng-controller="EditCustomerController as vm">

    <div class="btn btn-group">
        <button class="btn btn-success btn-sm" ng-click="vm.saveCustomer()">Save</button>
        <button class="btn btn-default btn-sm" ng-click="vm.back()">Back</button>
    </div>
    <div class="form-shell">
        <div class="form-center">
            <div class="form-group">
                <label class="col-sm-3 col-form-lable">Name</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="vm.Customer.CustomerName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-form-lable">Phone</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="vm.Customer.Phone" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-form-lable">Email</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="vm.Customer.Email" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-form-lable">Address</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="vm.Customer.Address" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-form-lable">Country</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="vm.Customer.Country" />
                </div>
            </div>

        </div>
    </div>
</div>